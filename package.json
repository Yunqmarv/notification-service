{
  "name": "notification-microservice",
  "version": "1.0.0",
  "description": "Enterprise-grade notification microservice with MongoDB, Redis, and comprehensive analytics",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "stop:pm2": "pm2 stop notification-service",
    "restart:pm2": "pm2 restart notification-service",
    "logs:pm2": "pm2 logs notification-service",
    "monit:pm2": "pm2 monit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testMatch='**/integration/**/*.test.js'",
    "test:load": "artillery run tests/load/notification-load.yml",
    "test:db": "node tests/health/test-db.js",
    "test:redis": "node tests/health/test-redis.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "docker:build": "docker build -t notification-microservice .",
    "docker:run": "docker run -p 3000:3000 notification-microservice",
    "migration:up": "node src/migrations/index.js up",
    "migration:down": "node src/migrations/index.js down",
    "seed": "node src/seeders/index.js",
    "docs": "jsdoc src/ -d docs/",
    "health": "curl http://localhost:3000/health",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "setup": "npm install && npm run migration:up && npm run seed"
  },
  "keywords": [
    "notifications",
    "microservice",
    "mongodb",
    "redis",
    "analytics",
    "websocket",
    "enterprise"
  ],
  "author": "Yunqmarv",
  "license": "MIT",
  "dependencies": {
    "@bull-board/api": "^5.10.2",
    "@bull-board/express": "^5.10.2",
    "agenda": "^5.0.0",
    "amqplib": "^0.10.3",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^11.11.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "kafka-node": "^5.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "prom-client": "^15.0.0",
    "redis": "^4.6.10",
    "socket.io-client": "^4.7.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "twilio": "^4.19.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Yunqmarv/dating-complete.git"
  },
  "bugs": {
    "url": "https://github.com/Yunqmarv/dating-complete/issues"
  }
}
