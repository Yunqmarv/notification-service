# ==============================================
# NOTIFICATION MICROSERVICE CONFIGURATION
# ==============================================

# MongoDB Connection (REQUIRED - Only ENV variable that must be set)
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/?retryWrites=true&w=majority&appName=notifications

# Admin API Key (REQUIRED - Change this in production!)
ADMIN_API_KEY=your-admin-api-key

# ======================== LOGGING CONFIGURATION ========================

# Master logging switch - set to 'false' to disable ALL logging
ENABLE_LOGGING=true

# Console logging - logs to terminal/console
ENABLE_CONSOLE_LOGGING=true

# File logging - logs to files in the logs directory
ENABLE_FILE_LOGGING=true

# Debug logging - detailed logs for development (disabled in production by default)
ENABLE_DEBUG_LOGGING=false

# Security event logging - authentication, authorization, and security-related events
ENABLE_SECURITY_LOGGING=true

# Performance logging - slow operations, metrics, and performance data
ENABLE_PERFORMANCE_LOGGING=true

# Request logging - HTTP request/response logging (using Morgan middleware)
ENABLE_REQUEST_LOGGING=true

# Log level - controls the minimum level of logs to output
# Options: error, warn, info, debug
LOG_LEVEL=info

# ========================================================================

# Example configurations for different environments:

# Development (verbose logging):
# ENABLE_LOGGING=true
# ENABLE_CONSOLE_LOGGING=true
# ENABLE_FILE_LOGGING=true
# ENABLE_DEBUG_LOGGING=true
# ENABLE_SECURITY_LOGGING=true
# ENABLE_PERFORMANCE_LOGGING=true
# ENABLE_REQUEST_LOGGING=true
# LOG_LEVEL=debug

# Production (minimal logging):
# ENABLE_LOGGING=true
# ENABLE_CONSOLE_LOGGING=false
# ENABLE_FILE_LOGGING=true
# ENABLE_DEBUG_LOGGING=false
# ENABLE_SECURITY_LOGGING=true
# ENABLE_PERFORMANCE_LOGGING=false
# ENABLE_REQUEST_LOGGING=false
# LOG_LEVEL=warn

# Testing (no logging):
# ENABLE_LOGGING=false

# Performance focused (only errors and performance):
# ENABLE_LOGGING=true
# ENABLE_CONSOLE_LOGGING=false
# ENABLE_FILE_LOGGING=true
# ENABLE_DEBUG_LOGGING=false
# ENABLE_SECURITY_LOGGING=false
# ENABLE_PERFORMANCE_LOGGING=true
# ENABLE_REQUEST_LOGGING=false
# LOG_LEVEL=error

