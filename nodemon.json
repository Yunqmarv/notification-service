{
  "watch": [
    "src/**/*"
  ],
  "ignore": [
    "examples/**/*",
    "tests/**/*",
    "docs/**/*",
    "logs/**/*",
    "node_modules/**/*",
    "*.test.js",
    "*.spec.js",
    ".git/**/*",
    "README.md",
    "*.md"
  ],
  "ext": "js,json",
  "exec": "node src/server.js",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000,
  "verbose": true
}
